*{
    font-family: Helvetica, Arial, sans-serif;
}
body{
    margin: 0;
    padding: 0;
}
#out-contain{
    width: 1330px;
    position: relative;
    margin:auto;
    margin-bottom: 0;
    margin-top: 0;
    padding: 0;
}
#contain{
    /*background: #F6F6F6;*/
    margin: 0 auto;
    width: 100%;
    overflow:hidden;
}
#footer{
    background: #4088C4;
    height: 39px;
    padding: 10px 0 0 0;
    margin-top: 0px;
    color: #f6f6f6;
    margin:auto;
    text-align:center;
    width:100%;
}

#header{
    padding:0;
    position: relative;
}
#tittle{
    height: 50px
}
#menu{
    width: 100%;
    margin: 0 auto;
    height: 110px;
}
#menu-big{
    width: 660px;
    margin: 0 auto;
    height: 180px;
}
#main{
    height:100%
    width: 100%;
}
#header ul li {
    display: inline;
    float: left;
    font-family: 'Trebuchet MS',Verdana,Arial,sans-serif;
    font-size: 14px;
    font-weight: bold;
    text-align: center;
}
a, a:visited, a:active, a:link{
    color:white;
}


.title_class{
    text-align: center;
    color: white;
    font-weight: bold;
    font-size: 16px;
    text-shadow: 0 -1px 1px #333;
    width: inherit;
    height: 32px;
    padding-top:12px;
    background:transparent url('/images/top_background.png') repeat-x;
}
#iphone_content img{
    max-width:220px;
    margin-left:10px;
}
#header ul li a, #header ul li a:visited, #header ul li a:link {
    display: block;
    height: 20px;
    line-height: 20px;
    padding: 64px 0 0;
    text-align: center;
    width: 118px;
    font-weight: lighter;
    background-repeat: no-repeat;
    background-position: top center;
    color: #777;
    text-decoration: none;
}
#header ul li a:hover, #header ul li a:active{
    background-color: #fff;
}
#header #home a {
    background-image: url(<%= asset_path "menu-images/home.png" %>);
}
#header #applications a {
    background-image: url(<%= asset_path "menu-images/apps.png" %>);
}
#header ul li a:hover{
    color:#000;
}
#header #home a:hover {
    background-image: url(<%= asset_path "menu-images/home-hover.png" %>);
}
#header #applications a:hover {
    background-image: url(<%= asset_path "menu-images/apps-hover.png" %>);
}

#content{
    float: left;
    width: 800px;
    padding: 0px 10px 20px 20px;
    min-height: 440px;
}
#sidebar{
    float: left;
    width: 230px;
    padding: 8px 8px 20px 10px;
    min-height: 440px;

}

#sidebar ul li{
    display: block;
    font-size: 18px;
    color: #777;
    font-family: verdana, arial, helvetica, sans-serif;
}

#maintitle{
    font-size: 300%;
    text-align: center;
    font-weight: lighter;
    color: #4088C4;
    padding: 15px 0;
}

