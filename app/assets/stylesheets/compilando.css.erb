.title{
    font-size: 200%;
    text-align: left;
    font-weight: lighter;
    font-family: verdana, arial, helvetica, sans-serif;
    color: #3008C4;
    padding: 15px 0;
    font-style : italic
}

.new{
  background: transparent url(<%= asset_path "new.png" %>) no-repeat;
  padding-left: 18px;
    font-size : 15px;
}

.show{
  background: transparent url(<%= asset_path "show.png" %>) no-repeat;
  padding-left: 18px;
  font-size : 15px;
}


.index{
  background: transparent url(<%= asset_path "index.png" %>) no-repeat;
  padding-left: 18px;
    font-size : 15px;
}

.list{
  width : 100%;
}

.list thead tr{
  background-color : grey;
  color : white;
}

.list tfoot tr{
  background-color : grey;
  color : white;
}

h1{
text-align : center;
}

a:hover{
    background-color : grey;
    color : #fff !important;

}

.status_published{
  color:green;
}

.status_deleted{
  color:red;
}

abbr{
  background-color : grey;
  color : white ;
  font-weight : bold;
  cursor: help;

}
