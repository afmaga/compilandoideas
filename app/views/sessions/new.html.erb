<div class="depot_form">
  <% if flash[:alert] %>
    <p id="infobox"><%= flash[:alert] %></p>
  <% end %>

    

  <%= form_tag('/login') do  %>
    <%if @from != 'index'%>
    <h3><%= _('Log In') %></h3>
    <p><%= raw  _("Enter your email and password to access the <strong> Metarails Manager</strong>")  %>:</p>
    <%end%>
    <table class="noalt" style="width: 400px;text-align:left;font-size: 18px;">
      <tr><td><%=_("New User? ")%></td><td><%= link_to 'Register here',{:action => 'new', :controller => 'users'}  %></td></tr>
      <tr><td><%=_("Password forgotten?")%></td><td><%= link_to 'Restore Password',{:action => 'new', :controller => 'emails'}  %></td></tr>
      <tr><td><label for="email"><%=_("Email:")%></label></td><td> <%= text_field_tag :email, params[:email] %></td></tr>

      <tr><td><label for="password"><%=_("Password:")%></label></td><td> <%= password_field_tag :password, params[:password] %></td></tr>
      <tr><td></td><td><%= submit_tag "Login" %></td></tr>
      
    </table>

  <% end %>
</div>
