<h1><%= _("Listing users") %></h1>

<table class="list">
  <thead>
  <tr>
    <th><%= _("Email") %></th>
    <th><%= _("User Name") %></th>
    <th><%= _("First name") %></th>
    <th><%= _("Last name") %></th>
    <th><%= _("Active") %></th>
    <th><%= _("Role") %></th>
   <th colspan="3"></th>
  </tr>
</thead>
<tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.name %></td>
    <td><%= user.f_name %></td>
    <td><%= user.l_name %></td>
    <td><%= user.active %></td>
    <td><%= user.role %></td>
    <td><%= link_to image_tag('show.png',:alt => _('Show'), :title => _('Show')), user %></td>
    <td><%= link_to image_tag('edit.png',:alt => _('Edit'), :title => _('Edit')), edit_user_path(user) %></td>
   <td><%= link_to image_tag("destroy.png", :border=>0, :title => _("Destroy"), :alt => _("Destroy")),  {:controller => "users", :action => "destroy", :id => user.id }, :confirm => 'Are you sure?', :method => :delete %></td>
       </tr>
<% end %>
  </tbody>
  <tfoot>
    <tr>
    <th><%= _("Email") %></th>
    <th><%= _("User Name") %></th>
    <th><%= _("First name") %></th>
    <th><%= _("Last name") %></th>
    <th><%= _("Active") %></th>
    <th><%= _("Role") %></th>
    <th colspan="3"></th>
  </tr>
  </tfoot>
</table>

<br />

<%= link_to 'New User', new_user_path, :class => 'new' %>